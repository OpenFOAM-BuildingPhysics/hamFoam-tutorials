FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     hamFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         432000;

deltaT          0.1;

writeControl    adjustableRunTime;

writeInterval   3600;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression on;

timeFormat      general;

timePrecision   12;

runTimeModifiable true;

Picard
{
    minDeltaT       1E-6;
    maxDeltaT       3600;//30;

    PicardToleranceTs	0.1;
    PicardTolerancews	0.1;
}

pcEqnForm    pc-based; //'pc-based' or 'mixed' - default is 'pc-based'

